<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.uss.edgar.practica10_httpclient.activity_retiro">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NÂº Cuenta:"
        android:id="@+id/textCuenta"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cantidad:"
        android:id="@+id/textView7"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/etCuenta"
        android:layout_alignStart="@+id/etCuenta" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etCuenta"
        android:layout_below="@+id/textCuenta"
        android:layout_alignLeft="@+id/textCuenta"
        android:layout_alignStart="@+id/textCuenta"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etMonto"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvUsuario"
        android:layout_toRightOf="@+id/tvUsuario"
        android:layout_toEndOf="@+id/tvUsuario"
        android:id="@+id/linearLayout4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuario:"
            android:id="@+id/tvUsuario" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACEPTAR"
        android:id="@+id/btnAceptar"
        android:layout_marginTop="49dp"
        android:onClick="onClickIngresar"
        android:layout_below="@+id/etMonto"
        android:layout_alignLeft="@+id/etMonto"
        android:layout_alignStart="@+id/etMonto" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RETORNAR"
        android:id="@+id/btnRetornar"
        android:layout_alignTop="@+id/btnAceptar"
        android:layout_alignRight="@+id/etMonto"
        android:layout_alignEnd="@+id/etMonto"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:onClick="onCLickRetornar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clave:"
        android:id="@+id/textView3"
        android:layout_below="@+id/etCuenta"
        android:layout_alignLeft="@+id/etCuenta"
        android:layout_alignStart="@+id/etCuenta"
        android:layout_marginTop="25dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etClave"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvResultado"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/etMonto"
        android:layout_alignStart="@+id/etMonto" />
</RelativeLayout>
